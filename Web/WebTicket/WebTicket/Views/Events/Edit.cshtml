@model WebTicket.Models.EventViewModel

<h1>Edit Event</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FechaEvento">Date</label>
        <input asp-for="FechaEvento" class="form-control" />
        <span asp-validation-for="FechaEvento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lugar">Location</label>
        <input asp-for="Lugar" class="form-control" disabled />
        <span asp-validation-for="Lugar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion">Description</label>
        <input asp-for="Descripcion" class="form-control" disabled />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NEntrada"># Entradas</label>
        <input asp-for="NEntrada" class="form-control" />
        <span asp-validation-for="NEntrada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio">Price</label>
        <input asp-for="Precio" class="form-control" disabled />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
